# LLM Provider Configuration
# Supported: openai, anthropic, ollama, huggingface
LLM_PROVIDER=openai

# Chat Model Configuration (provider-specific)
# OpenAI: gpt-4o, gpt-4o-mini
# Anthropic: claude-3-5-sonnet-20241022, claude-3-haiku-20240307
# Ollama: llama3.2, mistral, codellama
# HuggingFace: microsoft/DialoGPT-medium, facebook/blenderbot-400M-distill
CHAT_MODEL_NAME=gpt-4o
CHAT_MODEL_TEMPERATURE=0.5
CHAT_MODEL_MAX_TOKENS=2000

# Embedding Model Configuration (provider-specific)
# OpenAI: text-embedding-3-small, text-embedding-3-large
# HuggingFace/Ollama: sentence-transformers/all-MiniLM-L6-v2, sentence-transformers/all-mpnet-base-v2
EMBEDDING_MODEL_NAME=text-embedding-3-small

# OpenAI API Key
OPENAI_API_KEY=sk-api-key

# Anthropic API Key (Claude models)
ANTHROPIC_API_KEY=sk-ant-api-key

# Ollama Configuration (for local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TIMEOUT=60

# HuggingFace Configuration (optional for local models)
HUGGINGFACE_API_TOKEN=hf_api-token

# Elasticsearch Configuration
ELASTIC_HOST=http://localhost:9200
ELASTIC_USERNAME=elastic
ELASTIC_PASSWORD=your-elastic-password

# MySQL Configuration
MYSQL_USER=root
MYSQL_PASSWORD=your-mysql-password
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_SCHEMA=sample_schema

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30